@model IEnumerable<TestTask.Models.GetUserViewModel>

@{
    ViewData["Title"] = "Users Page";
}

<div class="text-center">
    <h1 class="display-4">Users</h1>
</div>


<div class="form-group">
    <input type="text" class="form-control" id="search-input" placeholder="Search in table..">
</div>

<table class="table" id="users-table">
    <thead>
        <tr>
            <th onclick="sortTable(1)" scope="col">Name</th>
            <th onclick="sortTable(2)" scope="col">Date of birth</th>
            <th onclick="sortTable(3)" scope="col">Married</th>
            <th onclick="sortTable(4)" scope="col">Phone</th>
            <th onclick="sortTable(5)" scope="col">Salary</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in @Model)
    {
        <tr>
            <td class="hidden">@user.Id</td>
            <td><input type="text" value=@user.Name /></td>
            <td><input type="text" value=@user.BirthDate.ToString("yyyy-MM-dd") /></td>
            <td><input type="text" value=@user.IsMarried.ToString() /></td>
            <td><input type="text" value=@user.PhoneNumber /></td>
            <td><input type="text" value=@user.Salary /></td>
            <td><input type="button" value="Delete Row" class="btn btn-danger delete-row" onclick="deleteRow(@user.Id);"></td>
        </tr>
    }
    </tbody>
</table>


<form class="form-inline">
    <div class="form-group">
        <label for="csv-input">Upload a CSV formatted file:</label>
        <input type="file" id="csv-input" class="form-control" accept=".csv" required />
    </div>
</form>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/PapaParse/4.1.2/papaparse.min.js"></script>
<script src="~/js/users.js" asp-append-version="true"></script>
