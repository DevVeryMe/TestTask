@model IEnumerable<TestTask.Models.GetUserViewModel>

@{
    ViewData["Title"] = "Users Page";
}

<div class="text-center">
    <h1 class="display-4">Users</h1>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Date of birth</th>
            <th scope="col">Married</th>
            <th scope="col">Phone</th>
            <th scope="col">Salary</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in @Model)
        {
        <tr>
            <td>@user.Name</td>
            <td>@user.BirthDate.ToString("dd/MM/yyyy")</td>
            <td>@user.IsMarried</td>
            <td>@user.PhoneNumber</td>
            <td>@user.Salary</td>
            <td><input type="button" value="Delete Row" class="btn btn-danger delete-row" onclick="deleteRow(@user.Id);"></td>
        </tr>
        }
    </tbody>
</table>

<form class="form-inline">
    <div class="form-group">
        <label for="csv-input">Upload a CSV formatted file:</label>
        <input type="file" id="csv-input" class="form-control" accept=".csv" required/>
    </div>
</form>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/PapaParse/4.1.2/papaparse.min.js"></script>
<script src="~/js/users.js" asp-append-version="true"></script>
